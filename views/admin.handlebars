    <div class="col-md-4">
        <div class="card department">

            <div class="card-header">

                <h3>Departments</h3>

            </div>

            <div class="card-body">
                <ul>
                    {{#each department}}
                    {{department.name}}
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card role">
            <div class="card-header">

                <h3>Roles</h3>
            </div>
            <div class="card-body">
                <ul>
                    {{#each role}}
                    {{role.title}}
                    {{/each}}

                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card employee">
            <div class="card-header">

                <h3>Employees</h3>

            </div>
            <div class="card-body">

                <ul>

                    {{#each employee}}
                    {{employee.first_name}} {{employee.last_name}}
